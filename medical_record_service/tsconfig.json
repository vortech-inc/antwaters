{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",                     // Output directory for compiled files
      "typeRoots": ["./node_modules/@types", "./src/types"],  // Add custom types
      "strict": true,                       // Enable all strict type checking options
      "esModuleInterop": true,              // Enable ES module interop
      "skipLibCheck": true                  // Skip type checking of declaration files for dependencies
    },
    "exclude": ["node_modules"],            // Exclude `node_modules` from compilation
    "include": ["src/**/*"]                 // Include all source files in the `src` folder
  }
  